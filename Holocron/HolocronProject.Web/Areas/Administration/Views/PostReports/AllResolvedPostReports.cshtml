
@model List<PostReportListViewModel>

@{
    var pager = Model.Select(x => x.Pager).FirstOrDefault();
}

@if (Model.Count() <= 0)
{
    <h1 class="text-center">There are currently no resolved post reports.</h1>
    <a asp-controller="PostReports" asp-action="AllPostReports" class="btn btn-primary float-left">Unresolved</a>

}
else
{
    <table class="table table-dark table-striped table-hover text-white">
        <thead>
            <tr>
                <th scope="col" class="col">Title</th>
                <th scope="col">Status</th>
                <th scope="col">Created on</th>
                <th scope="col">Resolved on</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-warning">@item.Title<span class="text-info float-right">@item.AccountUserName</span><br /><span class="text-white">@item.ShortDescription</span></td>
                    <td>@item.IsResolvedString</td>
                    <td>@item.NormalizedCreatedOn</td>
                    <td>@item.NormalizedResolvedOn</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <div>
            @if (pager.EndPage > 1)
            {
                <div class="float-left">
                    <ul class="pagination">
                        @if (pager.CurrentPage > 1)
                        {
                            <li class="float-left mr-1">
                                <a href="/PostReports/AllResolvedPostReports" class="btn btn-info">First</a>
                            </li>
                            <li class="float-left mr-1">
                                <a href="/PostReports/AllResolvedPostReports?page=@(pager.CurrentPage - 1)" class="btn btn-info">Previous</a>
                            </li>
                        }

                        @for (var page = pager.StartPage; page <= pager.EndPage; page++)
                        {
                            <li class="@(page == pager.CurrentPage ? "active" : "") float-right mr-1">
                                <a href="/PostReports/AllResolvedPostReports?page=@(page)" class="btn btn-info">@(page)</a>
                            </li>
                        }

                        @if (pager.CurrentPage < pager.TotalPages)
                        {
                            <li class="float-right mr-1">
                                <a href="/PostReports/AllResolvedPostReports?page=@(pager.CurrentPage + 1)" class="btn btn-info">Next</a>
                            </li>
                            <li class="float-right mr-1">
                                <a href="/PostReports/AllResolvedPostReports?page=@(pager.TotalPages)" class="btn btn-info">Last</a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div>
            <a asp-controller="PostReports" asp-action="AllPostReports" class="btn btn-primary">Unresolved</a>
        </div>
    </div>

}

