
@model CompetitionInputModel

<form method="post" class="col-md-12" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label class="text-info">All fields marked with <span class="text-danger">*</span> are required.</label>
    <hr class="bg-warning" />

    <div class="form-group ">
        <label asp-for="Title" class="font-weight-bold text-warning"></label>
        <label class="text-danger">*</label>
        <input asp-for="Title" class="form-control bg-dark text-white border-dark" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="font-weight-bold text-warning"></label>
        <label class="text-danger">*</label>
        <textarea asp-for="Description" class="form-control bg-dark text-white border-dark" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="EndDate" class="font-weight-bold text-warning"></label>
        <label class="text-danger">*</label>
        <input asp-for="EndDate" class="form-control bg-dark text-white border-dark" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <hr class="bg-warning"/>
    <input type="submit" class="btn btn-outline-warning" value="Create" />

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}