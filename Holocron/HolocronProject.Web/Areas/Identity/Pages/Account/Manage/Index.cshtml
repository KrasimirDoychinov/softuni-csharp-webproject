@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;

}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "table link media"
        ]
    });
</script>

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label><span class="font-weight-bold">Created on:</span> @Model.CreatedOn</label>

            <div class="form-group">
                <label asp-for="UserName" class="font-weight-bold"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div>
                <label class="font-weight-bold">Avatar</label>
                <div>
                    <label class="text-info">All images will be resized to 150x150 px.</label>
                </div>

            </div>

            @if (Model.AvatarImagePath != null)
            {
                <img src="~/Images/AvatarImages/@Model.AvatarImagePath?random=@Model.RandomImageQuery" class="rounded-circle border border-warning border" height="150" width="150" alt="@Model.AvatarImagePath?random=@Model.RandomImageQuery" />
            }
            else
            {
                <img src="~/Images/AvatarImages/defaultAvatar.jpg" class="rounded-circle border border-warning border" height="150" width="150" alt="@Model.AvatarImagePath?random=@Model.RandomImageQuery" />
            }

            <div class="form-group mt-3">
                <input asp-for="AvatarImage" class="form-control img-fluid" />
                <span asp-validation-for="AvatarImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ForumSignature" class="font-weight-bold"></label>
                <textarea asp-for="ForumSignature" class="form-control"></textarea>
            </div>

            <p>@Html.Raw(Model.SanitizedForumSignature)</p>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Update information</button>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}