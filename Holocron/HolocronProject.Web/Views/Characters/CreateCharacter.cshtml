@using HolocronProject.Data.Enums
@using HolocronProject.Services.Implementations

@model HolocronProject.Web.ViewModels.Character.CharacterInputModel

<form method="post" class="col-md-6" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label class="text-info">All fields marked with <span class="text-danger">*</span> are required.</label>
    <hr />

    <div class="form-group ">
        <label asp-for="Name" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Backstory" class="font-weight-bold"></label>
        <textarea asp-for="Backstory" class="form-control"></textarea>
        <span asp-validation-for="Backstory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title" class="font-weight-bold"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <select asp-for="Gender" class="form-control"
                asp-items="@Html.GetEnumSelectList<Gender>()">
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CharacterType" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <select asp-for="CharacterType" class="form-control"
                asp-items="@Html.GetEnumSelectList<CharacterType>()">
        </select>
        <span asp-validation-for="CharacterType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ForceAffiliation" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <select asp-for="ForceAffiliation" class="form-control"
                asp-items="@Html.GetEnumSelectList<ForceAffiliation>()">
        </select>
        <span asp-validation-for="ForceAffiliation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Class" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <select asp-for="Class" class="form-control"
                asp-items="@Model.ClassList">
        </select>
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Race" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <select asp-for="Race" class="form-control"
                asp-items="@Model.RaceList">
        </select>
        <span asp-validation-for="Race" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Server" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <select asp-for="Server" class="form-control"
                asp-items="@Model.ServerList">
        </select>
        <span asp-validation-for="Server" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Create character"/>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}