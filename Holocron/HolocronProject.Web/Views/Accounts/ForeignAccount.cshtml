@model ForeignAccountViewModel

@inject UserManager<Account> userManager

@{
}

<div class="text-center ">
    <h3 class="text-warning">
        @if (Model.Role == "Admin")
        {
            <i class="fas fa-user-cog"></i>
        }

        else
        {
            <i class="fas fa-user"></i>
        }
        @Model.UserName
    </h3>
    <img src="~/Images/AvatarImages/@Model.AvatarImagePath?random=@ViewData["random"].ToString()" class="rounded-circle border border-warning border" height="150" width="150" alt="" />


</div>

<div class="row">
    <div class="col-md-12">
        <div class="float-left">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link btn btn-info text-white mb-1" href="/Characters/AllCharacters?accountId=@Model.Id">Characters</a></li>
                <li class="nav-item"><a class="nav-link btn btn-info text-white mb-1" href="/Posts/LastPosts?accountId=@Model.Id">Last posts</a></li>
                <li class="nav-item"><a class="nav-link btn btn-info text-white mb-1" href="/Threads/LastThreads?accountId=@Model.Id">Last threads</a></li>
            </ul>
        </div>

        <div class="float-left col-md-6">
            <div><label><span class="font-weight-bold">Username: </span>@Model.UserName</label></div>
            <div><label><span class="font-weight-bold">Created on: </span>@Model.NormalizedCreatedOn</label></div>
            <div><label><span class="font-weight-bold">Threads: </span>@Model.ThreadsCount</label></div>
            <div><label><span class="font-weight-bold">Posts: </span>@Model.PostsCount</label></div>
        </div>
    </div>
</div>
