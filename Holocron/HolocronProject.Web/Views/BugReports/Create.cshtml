@using HolocronProject.Web.ViewModels.BugReports

@model BugReportInputModel

<div class="row">
    <div class="col-md-9">
        <form method="post" class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label class="text-info">All fields marked with <span class="text-danger">*</span> are required.</label>
            <hr class="bg-warning" />

            <div class="form-group ">
                <label asp-for="Title" class="font-weight-bold"></label>
                <label class="text-danger">*</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="Description" class="font-weight-bold"></label>
                <label class="text-danger">*</label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="Notes" class="font-weight-bold"></label>
                <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" value="Create" />

        </form>
    </div>
    <div class="col-md-3">
        <h2 class="text-info text-center">Rules</h2>
        <h6><span class="text-info">1. </span>Please do not write <span class="text-danger">stupid things, use inappropriate images or use profanity</span></h6>
        <h6><span class="text-info">2. </span>If the above rule is broken your bug report will be <span class="text-danger">deleted</span>.</h6>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}