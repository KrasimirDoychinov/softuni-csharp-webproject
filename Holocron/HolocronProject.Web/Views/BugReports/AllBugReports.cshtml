
@model List<BugReportListViewModel>

@{
    var pager = Model.Select(x => x.Pager).FirstOrDefault();
}

@if (Model.Count() <= 0)
{
    <h1 class="text-center">There are currently no pending bug reports</h1>
}
else
{
    <table class="table table-dark table-striped table-hover text-white">
        <thead>
            <tr>
                <th scope="col" class="col">Title</th>
                <th scope="col">Status</th>
                <th scope="col">Created on</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (this.User.IsInRole("Admin"))
                {
                    <tr>
                        <td><a href="/BugReports/ById?id=@item.Id" class="text-decoration-none text-warning" role="button">@item.Title<span class="text-info float-right">@item.AccountUserName</span></a><br />@item.ShortDescription</td>
                        <td>@item.IsResolvedString</td>
                        <td>@item.NormalizedCreatedOn</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td class="text-warning">@item.Title<br /><span class="text-white">@item.ShortDescription</span></td>
                        <td>@item.IsResolvedString</td>
                        <td>@item.NormalizedCreatedOn</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @if (pager.EndPage > 1)
    {
        <div class="float-right">
            <ul class="pagination">
                @if (pager.CurrentPage > 1)
                {
                    <li class="float-left mr-1">
                        <a href="/BugReports/AllBugReports" class="btn btn-info">First</a>
                    </li>
                    <li class="float-left mr-1">
                        <a href="/BugReports/AllBugReports?page=@(pager.CurrentPage - 1)" class="btn btn-info">Previous</a>
                    </li>
                }

                @for (var page = pager.StartPage; page <= pager.EndPage; page++)
                {
                    <li class="@(page == pager.CurrentPage ? "active" : "") float-right mr-1">
                        <a href="/BugReports/AllBugReports?page=@(page)" class="btn btn-info">@(page)</a>
                    </li>
                }

                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <li class="float-right mr-1">
                        <a href="/BugReports/AllBugReports?page=@(pager.CurrentPage + 1)" class="btn btn-info">Next</a>
                    </li>
                    <li class="float-right mr-1">
                        <a href="/BugReports/AllBugReports?page=@(pager.TotalPages)" class="btn btn-info">Last</a>
                    </li>
                }
            </ul>
        </div>
    }
}
<a asp-controller="BugReports" asp-action="AllResolvedBugReports" class="btn btn-primary">Resolved</a>

