
@model List<BugReportListViewModel>

@if (Model.Count() <= 0)
{
    <h1 class="text-center">There are currently no pending bug reports</h1>
}
else
{
    <table class="table table-dark table-striped table-hover text-white">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Status</th>
                <th scope="col">Created on</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (this.User.IsInRole("Admin"))
                {
                    <tr>
                        <td><a href="/BugReports/ById?id=@item.Id" class="text-decoration-none text-warning" role="button">@item.Title<span class="text-info float-right">@item.AccountUserName</span></a><br />@item.ShortDescription</td>
                        <td>@item.IsResolvedString</td>
                        <td>@item.NormalizedCreatedOn</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td class="text-warning">@item.Title<br /><span class="text-white">@item.ShortDescription</span></td>
                        <td>@item.IsResolvedString</td>
                        <td>@item.NormalizedCreatedOn</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

<a asp-controller="BugReports" asp-action="AllResolvedBugReports" class="btn btn-primary">Resolved bug reports</a>
