
@model List<CompetitionListViewModel>

@if (Model.Count() <= 0)
{
    <h1 class="text-center">There are currently no active competitions.</h1>
}
<table class="table text-white table-striped table-hover table-dark">
    <thead>
        <tr>
            <th scope="col" class="col">Title</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a href="/Competitions/ById?competitionId=@item.Id" class="text-decoration-none text-warning" role="button">@item.ShortTitle</a><br />@item.ShortDescription</td>
                <td>@item.NormalizedStartDate</td>
                <td>@item.NormalizedEndDate</td>
            </tr>
        }
    </tbody>
</table>

