@model PostInputModel


<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image link media"
        ],
        content_style: "body { background-color: #292b2c; color: #fff }"
    });
</script>

<div class="row">
    <div class="col-md-9">
        <form method="post" class="">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label class="text-info">All fields marked with <span class="text-danger">*</span> are required.</label>
            <hr class="bg-warning" />

            <div class="form-group ">
                <label asp-for="Description" class="font-weight-bold text-warning"></label>
                <label class="text-danger">*</label>
                <textarea asp-for="Description" class="form-control" rows="15"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <hr class="bg-warning" />
            <input type="submit" class="btn btn-outline-warning" value="Reply" />
        </form>
    </div>
    <div class="col-md-3">
        <h2 class="text-info text-center">Rules</h2>
        <h6><span class="text-info">1. </span>Please do not write <span class="text-danger">stupid things, use inappropriate images or use profanity</span></h6>
        <h6><span class="text-info">2. </span>If the above rule is broken your post will be <span class="text-danger">deleted</span>.</h6>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}