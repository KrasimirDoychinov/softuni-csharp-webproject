
@model PostInputModel


<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        content_style: 'img {max-width: 75%; max-height: 100%}',
        plugins: [
            "image table link media"
        ],
        image_dimensions: false,
        image_list: [
            { title: 'My image 1', value: 'https://www.example.com/my1.gif' },
            { title: 'My image 2', value: 'http://www.moxiecode.com/my2.gif' }
        ]
    });
</script>

<form method="post" class="">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label class="text-info">All fields marked with <span class="text-danger">*</span> are required.</label>
    <hr class="bg-warning" />

    <div class="form-group ">
        <label asp-for="Description" class="font-weight-bold"></label>
        <label class="text-danger">*</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <input type="submit" class="btn btn-primary" value="Reply" />
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}