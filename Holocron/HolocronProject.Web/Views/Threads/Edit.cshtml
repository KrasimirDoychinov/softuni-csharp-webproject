
@model ThreadEditModel

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image table link media"
        ],
        content_style: "body { background-color: #292b2c; color: #fff }"
    });
</script>

<form method="post" class="">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label class="text-info">All fields marked with <span class="text-danger">*</span> are required.</label>
    <hr class="bg-warning" />

    <div class="form-group ">
        <label asp-for="Title" class="font-weight-bold text-warning"></label>
        <label class="text-danger">*</label>
        <input asp-for="Title" class="form-control bg-dark text-white" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Description" class="font-weight-bold text-warning"></label>
        <label class="text-danger">*</label>
        <textarea asp-for="Description" class="form-control" rows="15"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <hr class="bg-warning" />
    <input type="submit" class="btn btn-outline-warning" value="Save" />
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}